<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:OnionMedia.ValueConverters">

    <Style x:Name="MetaInfoTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="5,10"/>
    </Style>

    <c:ItemClickEventArgsToClickedItemConverter x:Key="ItemClickEventArgsToClickedItemConverter"/>
    <c:InverseBoolConverter x:Key="InverseBoolConverter"/>
    <c:EqualsVisibilityConverter x:Key="EqualsVisibilityConverter"/>
    <c:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <c:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
    <c:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
    <c:ResourceNameToTextConverter x:Key="ResourceNameToTextConverter"/>
    <c:BitToKilobitConverter x:Key="BitToKilobitConverter"/>
    <c:FFmpegConversionStateToVisibilityConverter x:Key="FFmpegConversionStateToVisibilityConverter"/>
    <c:FileSizeConverter x:Key="FileSizeConverter"/>
    <c:SampleRateComboBoxConverter x:Key="SampleRateComboBoxConverter"/>
</ResourceDictionary>
